import os
import sys
import argparse
from scylla_util import *

if __name__ == '__main__':
    if os.getuid() > 0:
        print('Requires root permission.')
        sys.exit(1)
    parser = argparse.ArgumentParser(description='Setup scylla-housekeeping.')
    parser.add_argument('--version_check', action='store_true', default=False)
    args = parser.parse_args()

    switch_to_scylla_user()
    reset_umask_to_system_default()

    if not os.path.exists('/etc/scylla.d/housekeeping.cfg'):
        if args.version_check:
            with open('/etc/scylla.d/housekeeping.cfg', 'w') as f:
                f.write('[housekeeping]\ncheck-version: True\n')
        else:
            with open('/etc/scylla.d/housekeeping.cfg', 'w') as f:
                f.write('[housekeeping]\ncheck-version: False\n')

    cur_version=out('scylla --version', exception=False)
    if len(cur_version) > 0:
        if is_debian_variant():
            new_version=out('/usr/lib/scylla/scylla-housekeeping --uuid-file /var/lib/scylla-housekeeping/housekeeping.uuid --repo-files \'/etc/apt/sources.list.d/scylla*.list\' version --version {} --mode i'.format(cur_version), shell=True, exception=False)
        else:
            new_version=out('/usr/lib/scylla/scylla-housekeeping --uuid-file /var/lib/scylla-housekeeping/housekeeping.uuid --repo-files \'/etc/yum.repos.d/scylla*.repo\' version --version {} --mode i'.format(cur_version), shell=True, exception=False)
        if len(new_version) > 0:
            print(new_version)
    else:
        if is_debian_variant():
            new_version=out('/usr/lib/scylla/scylla-housekeeping --uuid-file /var/lib/scylla-housekeeping/housekeeping.uuid --repo-files \'/etc/apt/sources.list.d/scylla*.list\' version --version unknown --mode u', shell=True, exception=False)
        else:
            new_version=out('/usr/lib/scylla/scylla-housekeeping --uuid-file /var/lib/scylla-housekeeping/housekeeping.uuid --repo-files \'/etc/yum.repos.d/scylla*.repo\' version --version unknown --mode u', shell=True, exception=False)
        print('A Scylla executable was not found, please check your installation {}'.format(new_version))

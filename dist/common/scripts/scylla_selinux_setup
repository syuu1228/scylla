import os
import subprocess
import logging
import scylla_util

if __name__ == '__main__':
    if os.getuid() > 0:
        logging.error('Requires root permission.')
        sys.exit(1)

    if scylla_util.is_debian_variant() or scylla_util.is_gentoo_variant():
        logging.error("scylla_selinux_setup only supports Red Hat variants")
        sys.exit(0)

    res = subprocess.check_output(['sestatus'])
    if res.split(None)[2] != 'disabled':
        subprocess.check_call(['setenforce', '0'])
        cfg = scylla_util.sysconfig_parser('/etc/sysconfig/selinux')
        cfg.set('SELINUX', 'disabled')
